<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <TextView
        android:id="@+id/fragmentHome"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="      home"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btnToProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Go to profile"
        app:layout_constraintTop_toBottomOf="@id/fragmentHome" />

    <Button
        android:id="@+id/btnToTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Go to tasks"
        app:layout_constraintTop_toBottomOf="@id/btnToProfile" />
    <!--<Button
        android:id="@+id/btnToNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="GoToNotifications"
        app:layout_constraintTop_toBottomOf="@id/btnToTasks" />

    <Button
        android:id="@+id/btnToSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="GoToSettings"
        app:layout_constraintTop_toBottomOf="@id/btnToNotifications" />-->

</androidx.constraintlayout.widget.ConstraintLayout>